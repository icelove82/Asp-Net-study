@namespace Asp_Net_study.Components
@using Microsoft.AspNetCore.Components.Web
@using Asp_Net_study.Models
@using Asp_Net_study.Services
@inject JsonFileProductService ProductService

<div class="card-columns">
    @foreach (var product in ProductService.GetProducts())
    {
        <div class="card">
            <div class="card-img" style="background-image: url('@product.Image');"></div>
            <div class="card-body">
                <h5 class="card-title">@product.Title</h5>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                <button
                    class="btn alert-primary"
                    onclick="(e => SelectProduct(@product.Id))"
                    data-toggle="modal"
                    data-target="#productModal">
                    More Info
                </button>
            </small>
        </div>
    }
</div>

@code {
    string selectProductId;
    Product selectProduct;

    void SelectProduct(string productId)
    {
        selectProductId = productId;
        selectProduct = ProductService.GetProducts().First(x => x.Id == productId);
    }
}
